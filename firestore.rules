rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    match /users/{userId} {

      allow read: if request.auth != null
                  && request.auth.uid == userId;

      allow read: if isAdmin();

      allow create: if request.auth != null
                    && request.auth.uid == userId;

      allow update: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.data.diff(resource.data)
                       .changedKeys()
                       .hasOnly(["displayName"]);

      allow update: if isAdmin()
                    && request.resource.data.diff(resource.data)
                       .changedKeys()
                       .hasOnly(["banned", "totalCoins"]);

      allow delete: if false;
    }

    match /config/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /redeemRequests/{requestId} {
      allow read: if isAdmin();
      allow create: if request.auth != null;
      allow update: if isAdmin()
                    && request.resource.data.diff(resource.data)
                       .changedKeys()
                       .hasOnly(["status"]);
      allow delete: if false;
    }

    match /abuseLogs/{logId} {
      allow read: if isAdmin();

      allow create: if request.auth != null
                    && request.resource.data.keys()
                       .hasOnly(["uid", "reason", "ip", "timestamp"])
                    && request.resource.data.uid == request.auth.uid
                    && request.resource.data.reason is string
                    && request.resource.data.reason.size() > 0
                    && request.resource.data.reason.size() <= 500
                    && request.resource.data.ip is string
                    && request.resource.data.ip.size() > 0
                    && request.resource.data.ip.size() <= 64
                    && request.resource.data.timestamp is timestamp;

      allow update, delete: if false;
    }

    match /admins/{adminId} {
      allow read: if request.auth != null
                  && request.auth.uid == adminId;
      allow write: if false;
    }
  }
}
